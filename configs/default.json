{
  "name": "default-loop",
  "description": "Default Ralph loop configuration with Claude agent",
  "steps": [
    {
      "type": "agent",
      "name": "setup",
      "config": {
        "prompt_file": ".ralph/prompts/SETUP_PROMPT.md",
        "prd_file": ".ralph/prd.json",
        "session_file": ".ralph/.ralph_session",
        "marker_file": ".ralph/.ralph_setup_done",
        "allowed_tools": "Write,Read,Edit,Glob,Grep,Bash,Task,TodoWrite,WebFetch,WebSearch",
        "timeout": "15m",
        "log_dir": ".ralph/logs"
      },
      "timeout": "20m",
      "max_retries": 1,
      "retry_delay": "30s"
    },
    {
      "type": "agent",
      "name": "run-claude",
      "config": {
        "prompt_file": ".ralph/prompts/LOOP_PROMPT.md",
        "prd_file": ".ralph/prd.json",
        "session_file": ".ralph/.ralph_session",
        "allowed_tools": "Write,Read,Edit,Glob,Grep,Bash,Task,TodoWrite,WebFetch,WebSearch",
        "timeout": "15m",
        "log_dir": ".ralph/logs"
      },
      "timeout": "20m",
      "max_retries": 1,
      "retry_delay": "30s"
    },
    {
      "type": "readme-check",
      "name": "update-docs",
      "enabled": true,
      "continue_on_error": true,
      "config": {
        "readme_path": "README.md"
      }
    }
  ]
}
